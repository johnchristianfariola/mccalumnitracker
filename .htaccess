# Enable the rewrite engine
RewriteEngine On

# Redirect all HTTP requests to HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [R=301,L]

# Redirect all requests to https://mccalumnitracker.com
RewriteCond %{HTTP_HOST} !^mccalumnitracker\.com$ [NC]
RewriteRule ^(.*)$ https://mccalumnitracker.com/$1 [R=301,L]

# Disable directory listing
Options -Indexes

# Protect the .htaccess file
<Files ".htaccess">
    Require all denied
</Files>

# Security headers
<IfModule mod_headers.c>
    # Prevent MIME type sniffing
    Header set X-Content-Type-Options "nosniff"

    # Enable XSS protection
    Header set X-XSS-Protection "1; mode=block"

    # Prevent clickjacking
    Header set X-Frame-Options "SAMEORIGIN"

    # Content Security Policy
    # Allow scripts from self and trusted domains
    Header set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' https://trusted.cdn.com; style-src 'self' 'unsafe-inline'; img-src 'self' data: https://trusted.cdn.com; connect-src 'self'; font-src 'self' https://fonts.gstatic.com; frame-ancestors 'self';"
</IfModule>

# Block access to sensitive files
<FilesMatch "\.(htaccess|htpasswd|ini|log|sh|bak)$">
    Require all denied
</FilesMatch>

# Limit HTTP methods
<LimitExcept GET POST>
    Require all denied
</LimitExcept>